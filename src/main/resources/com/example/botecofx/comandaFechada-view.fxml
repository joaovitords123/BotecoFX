<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.botecofx.ComandaFechadaController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="19.0" prefWidth="802.0" spacing="10.0">
         <children>
            <Label text="Buscar por data:" />
            <DatePicker fx:id="dataCom" />
            <Button mnemonicParsing="false" onAction="#onBuscarData" text="Buscar por data" />
            <Button mnemonicParsing="false" onAction="#onRemoverFiltro" text="Remover filtro" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
      <ScrollPane>
         <content>
            <FlowPane fx:id="flowPane" alignment="CENTER" hgap="16.0" prefHeight="600.0" prefWidth="800.0" vgap="16.0">
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
